{
  "name": "dexa",
  "version": "0.2.0",
  "description": "dexa is a CLI tool that allows you to capture your preferred tech stack as a project template with generators",
  "main": "index.js",
  "bin": {
    "dx": "bin/dx.js",
    "dx-init": "bin/dx-init.js",
    "dx-stack": "bin/dx-stack.js",
    "dx-stack-add": "bin/dx-stack-add.js",
    "dx-stack-delete": "bin/dx-stack-delete.js",
    "dx-stack-list": "bin/dx-stack-list.js"
  },
  "scripts": {
    "test": "npm run eslint && npm run unitTest && npm run integrationTest",
    "unitTest": "mocha -R spec --extension test.js --timeout 60000 ./test/unit/**/*",
    "integrationTest": "mocha -R spec --extension test.js --timeout 60000 ./test/integration/**/*",
    "eslint": "eslint .",
    "prepare": "husky install"
  },
  "keywords": [
    "CLI",
    "git",
    "template",
    "project-template",
    "generators"
  ],
  "author": "https://github.com/kaizendorks/dexa/graphs/contributors",
  "license": "MIT",
  "dependencies": {
    "chalk": "4.1.1",
    "cli-spinner": "0.2.10",
    "commander": "8.0.0",
    "degit": "2.8.4",
    "didyoumean": "1.2.2",
    "execa": "5.1.1",
    "glob": "7.1.7",
    "handlebars": "4.7.7",
    "inquirer": "8.1.2"
  },
  "devDependencies": {
    "chai": "4.3.4",
    "chai-shallow-deep-equal": "1.4.6",
    "eslint": "7.31.0",
    "husky": "7.0.1",
    "mocha": "9.0.2"
  },
  "engines": {
    "node" : ">=14"
  }
}
